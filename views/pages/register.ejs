<html lang="en">
    <head>
        <title>Register for An Account Page</title>
        <script>
            var baseApiUrl = "<%= baseAPIUrl %>";
        </script>
        <link rel="stylesheet" href="/stylesheets/log-in.css">
        <script type='module' src='/javascripts/register.js'></script>
    </head>

    <body>
        <a class="skip-link" href="#register-main-content">Skip to Register Form</a>
        <div class="register-page">
            <%- include('../templates/alert'); %>

            <div class="register-title">
                REGISTER AS A TEACHER
            </div>

            <main id="register-main-content">
                <div class="register-container">
                    <form id="register-form">
                        <div>
                            <label for="register-name"><b>Name</b></label>
                            <input class="register-input" id="register-name" type="text" name="name" placeholder="name" required />

                            <label for="register-email"><b>Email</b></label>
                            <input class="register-input" id="register-email" type="text" name="email" placeholder="email" required />
                
                            <label for="register-username"><b>Username</b></label>
                            <input class="register-input" id="register-username" type="text" name="username" placeholder="username"
                                required />
                
                            <label for="register-password"><b>Password</b></label>
                            <input class="register-input" id="register-password" type="password" name="password" placeholder="password"
                                required />

                            <label for="register-password-confirm"><b>Re-enter Password</b></label>
                            <input class="register-input" id="register-password-confirm" type="password" name="password-confirm" placeholder="re-enter password" required />
                
                            <input class="register-submit" id="register-submit" type="submit" />
                        </div>
                    </form>
                </div>
            </main>
        </div>
    </body>
</html>